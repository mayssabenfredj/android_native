<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".space_chose"
    android:background="@color/bleu"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="240dp"
            android:layout_height="89dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="123dp"
            android:alpha="0.86"
            android:fontFamily="@font/abelregular"
            android:gravity="center|center_horizontal"
            android:text="@string/who_is_going_to_use_this_device"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:lineHeight="35sp" />

        <FrameLayout
            android:layout_width="310dp"
            android:layout_height="205dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="40dp"
            android:clipToPadding="true">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="67.98dp"
                android:layout_height="54.7dp"
                android:layout_marginStart="220dp"
                app:srcCompat="@drawable/head"
                android:contentDescription="@string/image" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="165dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/frame"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="64dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/parents"
                    android:textColor="@color/bleu"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="159dp"
                        android:layout_height="147.37dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/bottomwomen"
                        android:contentDescription="@string/image" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="129.24dp"
                        android:layout_height="140.31dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="-210dp"
                        app:srcCompat="@drawable/standingwomen"
                        android:contentDescription="@string/image" />

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="47dp"
            android:layout_marginTop="37dp"
            android:clipChildren="false">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="165dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/frame"
                android:clipChildren="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="64dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/child"
                    android:textColor="@color/bleu"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="142.76dp"
                        android:layout_height="151.85dp"
                        android:layout_marginTop="47dp"
                        app:srcCompat="@drawable/childbottom"
                        android:contentDescription="@string/image" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="273.05dp"
                        android:layout_height="263.13dp"
                        android:layout_marginStart="-65dp"
                        android:layout_marginTop="-230dp"
                        app:srcCompat="@drawable/childtop"
                        android:contentDescription="@string/image" />

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
